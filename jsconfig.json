    "module": "CommonJS",
    "paths": {
      "@/*": ["src/*"],
      "@com/*": ["src/components/*"],
      "@util/*": ["src/utils/*"],
      "@lay/*": ["src/layout/*"],
      "@views/*": ["src/views/*"]
